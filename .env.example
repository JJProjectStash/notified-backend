# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/notified_db
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/notified_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=30d

# Cookie Configuration
JWT_COOKIE_EXPIRES_IN=7

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@notified.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Default Admin User (for seeding)
DEFAULT_ADMIN_EMAIL=admin@notified.com
DEFAULT_ADMIN_PASSWORD=Admin@123
DEFAULT_ADMIN_NAME=System Administrator
